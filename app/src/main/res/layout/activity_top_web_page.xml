<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopWeb_page"
    android:background="@drawable/home">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/b1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/stack_overflow"
                    android:paddingTop="60dp"
                    android:text="Stack Overflow"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/github"
                    android:paddingTop="60dp"
                    android:text="GitHub"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/quora"
                    android:paddingTop="60dp"
                    android:text="Quora"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/stack_exchange"
                    android:paddingTop="60dp"
                    android:text="Stack Exchange"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/b11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/google_devlopers"
                    android:paddingTop="60dp"
                    android:text="Google Deveiopers"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/code_project"
                    android:paddingTop="60dp"
                    android:text="Code Project"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/google_groups"
                    android:paddingTop="60dp"
                    android:text="Google Groups"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/stack_share"
                    android:paddingTop="60dp"
                    android:text="Stack Share"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>